<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastrar.CadastrarTipocontaActivity"
    android:background="@drawable/backgroundpadrao">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Escolha uma das opções abaixo:"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tvProfiletypeaccount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="137dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvProfiletypeaccount">

        <RadioButton
            android:id="@+id/rbDonate"
            android:layout_width="152dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:button="@drawable/rg_contadoar"
            android:text="Donate"
            android:textSize="0dp"/>

        <RadioButton
            android:id="@+id/rbAdopt"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:button="@drawable/rg_contadotar"
            android:text="Adopt"
            android:textSize="0dp"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvProfiletypeaccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/rancho"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="55dp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/bttnConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/botao"
        android:fontFamily="@font/roboto_bold"
        android:text="Confirmar"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/ProgressBarLoad"
        style="?android:attr/progressBarStyle"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/bttnConfirm"
        app:layout_constraintEnd_toEndOf="@+id/bttnConfirm"
        app:layout_constraintTop_toTopOf="@+id/bttnConfirm"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/tvInfoeditprofilepet"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/roboto"
        android:text="Esta com duvidas? "
        android:textAlignment="viewStart"
        android:textColor="#898989"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/bttnConfirm"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/bttnConfirm" />

    <Button
        android:id="@+id/bttnHelp"
        android:layout_width="81dp"
        android:layout_height="22dp"
        android:background="?android:attr/selectableItemBackground"
        android:fontFamily="@font/roboto"
        android:onClick="GotoFaq"
        android:text="Clique Aqui"
        android:textAllCaps="False"
        android:textColor="#8D78FA"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvInfoeditprofilepet"
        app:layout_constraintStart_toEndOf="@+id/tvInfoeditprofilepet"
        app:layout_constraintTop_toTopOf="@+id/tvInfoeditprofilepet"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>